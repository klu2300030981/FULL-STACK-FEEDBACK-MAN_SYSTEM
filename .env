# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=mainfeedback
MYSQL_USER=root
MYSQL_PASSWORD=root

# Spring Boot Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/mainfeedback?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=root
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# Service URLs (for inter-service communication)
STUDENT_SERVICE_URL=http://student-service:2001
ADMIN_SERVICE_URL=http://admin-service:2002
COURSE_SERVICE_URL=http://course-service:2003
FACULTY_SERVICE_URL=http://faculty-service:2004
SC_FEEDBACK_SERVICE_URL=http://sc-feedback-service:2005
SF_FEEDBACK_SERVICE_URL=http://sf-feedback-service:2006

# React App Configuration (for frontend)
REACT_APP_STUDENT_SERVICE_URL=http://localhost:2001
REACT_APP_ADMIN_SERVICE_URL=http://localhost:2002
REACT_APP_COURSE_SERVICE_URL=http://localhost:2003
REACT_APP_FACULTY_SERVICE_URL=http://localhost:2004
REACT_APP_SC_FEEDBACK_SERVICE_URL=http://localhost:2005
REACT_APP_SF_FEEDBACK_SERVICE_URL=http://localhost:2006

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# Logging Configuration
LOGGING_LEVEL_COM_YOURPACKAGE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_ORG_HIBERNATE=INFO

# File Upload Configuration
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3030,http://frontend:3000
